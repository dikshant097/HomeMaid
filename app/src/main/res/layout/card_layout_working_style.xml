<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Working Style"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_permanent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permanent (Monthly basis )"
            android:textSize="15sp"
            android:textColor="@color/text_grey"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/icon_tick"
            android:drawablePadding="10dp"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/tv_temporary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temporary (Hourly basis)"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/icon_cross"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textColor="@color/text_grey"/>

    </LinearLayout>

</android.support.v7.widget.CardView>